<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_white"
        android:orientation="horizontal"
        android:padding="@dimen/dimen_ten">

        <ImageView
            android:id="@+id/iv_order_sale_child_image"
            android:layout_width="@dimen/dimen_hundred"
            android:layout_height="@dimen/dimen_hundred"
            android:layout_gravity="center"
            android:contentDescription="@null" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/dimen_ten"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_order_sale_child_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="2"
                android:minLines="2"
                android:textColor="@color/preference_name"
                android:textSize="@dimen/font_large"
                tools:text="hdasdkjashfjhasfhashjfajkfhahshkhadbkja" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_order_sale_child_money"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="29.90"
                    android:textColor="@color/preference_money"
                    android:textSize="@dimen/font_large" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="元1份"
                    android:textColor="@color/preference_name"
                    android:textSize="@dimen/font_normal" />

                <TextView
                    android:id="@+id/tv_order_sale_child_big_money"
                    android:layout_width="@dimen/dimen_zero"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:textColor="@color/preference_name"
                    android:textSize="@dimen/font_small"
                    tools:text="折合67.90/斤" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_zero"
                android:layout_marginTop="@dimen/dimen_two"
                android:layout_weight="1"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="@dimen/dimen_zero"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        android:text="数量:  "
                        android:textColor="@color/preference_name"
                        android:textSize="@dimen/font_normal" />

                    <TextView
                        android:id="@+id/tv_order_sale_child_num"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        android:textColor="@color/preference_count"
                        android:textSize="@dimen/font_normal"
                        tools:text="3" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        android:text="件"
                        android:textColor="@color/preference_name"
                        android:textSize="@dimen/font_normal" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="@dimen/dimen_zero"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        android:text="小计:  "
                        android:textColor="@color/preference_name"
                        android:textSize="@dimen/font_normal" />

                    <TextView
                        android:id="@+id/tv_order_sale_child_all_money"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        android:textColor="@color/preference_count"
                        android:textSize="@dimen/font_normal"
                        tools:text="30.00" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        android:text="元"
                        android:textColor="@color/preference_name"
                        android:textSize="@dimen/font_normal" />
                </LinearLayout>


            </LinearLayout>

        </LinearLayout>


    </LinearLayout>
</LinearLayout>



