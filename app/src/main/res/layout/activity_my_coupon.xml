<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.ypshengxian.daojia.ui.activity.MyCouponActivity">

    <include layout="@layout/simple_title_bar"/>

    <android.support.design.widget.TabLayout
        android:id="@+id/tl_activity_my_coupon"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        app:tabGravity="fill"
        app:tabIndicatorColor="@color/color_theme"
        app:tabIndicatorHeight="2dp"
        app:tabMode="fixed"
        app:tabPadding="0dp"
        app:tabSelectedTextColor="@color/color_theme"
        app:tabTextAppearance="@style/TabLayoutTextStyle"
        app:tabTextColor="@color/main_color_selected_text"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="12dp"
        android:background="@color/color_page_bg"/>

    <android.support.v4.view.ViewPager
        android:id="@+id/vp_activity_my_coupon"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
</LinearLayout>
