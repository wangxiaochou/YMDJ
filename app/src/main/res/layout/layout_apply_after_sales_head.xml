<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:paddingTop="12dp"
    android:paddingBottom="12dp"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_layout_after_sales_head_sn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:text="订单编号"
        android:textColor="@color/top_bar_title_color"
        android:textSize="@dimen/font_large"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginTop="12dp"
        android:background="@color/color_page_line"/>

    <EditText
        android:id="@+id/et_layout_after_sales_head_message"
        android:layout_width="match_parent"
        android:layout_height="190dp"
        android:layout_marginTop="12dp"
        android:background="@drawable/shape_gray_rectangle_soild_apply_after_sales_bg"
        android:gravity="left"
        android:hint="请输入相关的问题反馈哦!"
        android:padding="10dp"
        android:textColor="@color/top_bar_title_color"
        android:textColorHint="@color/color_gray_login_hint_text"
        android:textSize="@dimen/font_small"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="上传凭证"
        android:textColor="@color/top_bar_title_color"
        android:textSize="@dimen/font_large"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginTop="10dp"
        android:background="@color/color_page_line"/>
</LinearLayout>