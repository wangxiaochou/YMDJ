<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_white"
        android:orientation="horizontal"
        android:padding="@dimen/dimen_ten">


        <android.support.v7.widget.CardView
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:layout_width="@dimen/dimen_hundred"
            android:layout_height="@dimen/dimen_hundred"
            android:layout_gravity="center"
            android:background="@drawable/shape_img_line"
            card_view:cardBackgroundColor="@color/color_white"
            card_view:cardCornerRadius="@dimen/dimen_eight"
            card_view:cardElevation="@dimen/dimen_two"
            card_view:cardUseCompatPadding="true">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <ImageView
                    android:scaleType="fitXY"
                    android:id="@+id/iv_class_image"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:contentDescription="@null"
                    tools:src="@mipmap/ic_launcher"/>
            </RelativeLayout>
        </android.support.v7.widget.CardView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/dimen_ten"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_class_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="2"
                android:minLines="2"
                tools:text="hdasdkjashfjhasfhashjfajkfhahshkhadbkja"
                android:textColor="@color/preference_name"
                android:textSize="@dimen/font_normal" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_four"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="已售:"
                    android:textColor="@color/preference_price"
                    android:textSize="@dimen/font_small" />

                <TextView
                    android:id="@+id/tv_class_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dimen_eight"
                    tools:text="222分"
                    android:textColor="@color/preference_count"
                    android:textSize="@dimen/font_small" />
                <TextView
                    android:visibility="gone"
                    android:layout_marginLeft="@dimen/dimen_sixteen"
                    android:layout_gravity="center"
                    android:id="@+id/tv_class_folder"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/font_tiny"
                    tools:text="4折"
                    android:background="@drawable/shape_preference_folder"
                    android:textColor="@color/preference_count"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_zero"
                android:layout_marginTop="@dimen/dimen_two"
                android:layout_weight="1"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_item_class_money"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        tools:text="20.00/斤"
                        android:textColor="@color/preference_money"
                        android:textSize="@dimen/font_normal" />

                    <TextView
                        android:id="@+id/tv_item_class_old_money"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        tools:text="20.00/带"
                        android:textColor="@color/preference_price"
                        android:textSize="@dimen/font_tiny" />

                </LinearLayout>

                <Button
                    android:id="@+id/btn_item_class_add"
                    style="?android:attr/borderlessButtonStyle"
                    android:layout_width="@dimen/dimen_twenty_six"
                    android:layout_height="@dimen/dimen_twenty_six"
                    android:layout_gravity="center"
                    android:background="@drawable/icon_add_cart" />
            </LinearLayout>


        </LinearLayout>
    </LinearLayout>


</LinearLayout>
