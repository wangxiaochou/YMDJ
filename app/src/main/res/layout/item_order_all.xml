<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/color_background"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_white"
        android:orientation="horizontal"
        android:padding="@dimen/dimen_twelve">

        <TextView
            android:id="@+id/tv_item_order_all_number"
            android:layout_width="@dimen/dimen_zero"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:textColor="@color/preference_name"
            android:textSize="@dimen/font_normal"
            tools:text="订单编号:312312415535235" />


        <TextView
            android:id="@+id/tv_item_order_all_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textColor="@color/preference_price"
            android:textSize="@dimen/font_normal"
            tools:text="待收货" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_ninety"
        android:background="@color/color_white"
        android:orientation="horizontal">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/rl_item_order_all_child_count"
            android:layout_width="@dimen/dimen_zero"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_line"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/tv_item_order_all_goods"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textColor="@color/preference_name"
            android:textSize="@dimen/font_normal"
            tools:text="共9件商品" />

        <ImageView
            android:layout_width="@dimen/dimen_twenty"
            android:layout_height="@dimen/dimen_twenty"
            android:layout_gravity="center"
            android:contentDescription="@null"
            android:src="@drawable/icon_go" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_line"
        android:background="@color/color_white"
        android:orientation="horizontal"
        android:padding="@dimen/dimen_twelve">

        <TextView
            android:id="@+id/tv_item_order_all_money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textColor="@color/preference_name"
            android:textSize="@dimen/font_normal"
            tools:text="总价:46.324" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right|center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_item_order_all_one"
                android:visibility="gone"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="@dimen/dimen_sixty_six"
                android:layout_height="@dimen/dimen_twenty_eight"
                android:layout_marginRight="@dimen/dimen_eight"
                android:background="@drawable/shape_order_btn"
                tools:text="申请退款"
                android:textColor="@color/preference_price"
                android:textSize="@dimen/font_small" />

            <Button
                android:id="@+id/btn_item_order_all_two"
                android:visibility="gone"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="@dimen/dimen_sixty_six"
                android:layout_height="@dimen/dimen_twenty_eight"
                android:layout_marginRight="@dimen/dimen_eight"
                android:background="@drawable/shape_order_btn"
                tools:text="删除订单"
                android:textColor="@color/preference_price"
                android:textSize="@dimen/font_small" />

            <Button
                android:id="@+id/btn_item_order_all_three"
                android:visibility="gone"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="@dimen/dimen_sixty_six"
                android:layout_height="@dimen/dimen_twenty_eight"
                android:background="@drawable/shape_order_btn_red"
                tools:text="付款"
                android:textColor="@color/color_white"
                android:textSize="@dimen/font_small" />

        </LinearLayout>


    </LinearLayout>


</LinearLayout>
