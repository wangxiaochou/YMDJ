<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/color_background"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:gravity="center"
    android:orientation="vertical"
    >

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_hundred_seventy_six"
        android:layout_gravity="center"
        card_view:cardBackgroundColor="@color/color_white"
        card_view:cardCornerRadius="@dimen/dimen_twenty"
        card_view:cardElevation="@dimen/dimen_two"
        card_view:cardUseCompatPadding="true"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/iv_item_main_goods_img"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_hundred_seventy_six"
                android:scaleType="centerCrop"
                android:contentDescription="@null"
                tools:src="@mipmap/ic_launcher" />

            <TextView
                android:layout_alignBottom="@+id/iv_item_main_goods_img"
                android:padding="@dimen/dimen_two"
                android:id="@+id/tv_item_main_goods_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:background="@color/preference_good_bottom"
                android:gravity="center"
                android:textStyle="bold"
                android:maxLines="1"
                android:ellipsize="end"
                android:textColor="@color/color_white"
                android:textSize="@dimen/font_small"
                tools:text="当季水果,酸甜可口" />

            <RelativeLayout
                android:id="@+id/rl__item_main_goods_title_top_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/icon_good_top">

                <TextView
                    android:id="@+id/tv_item_main_goods_title_top"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dimen_six"
                    android:layout_marginTop="@dimen/dimen_six"
                    android:textColor="@color/color_white"
                    android:textSize="@dimen/font_small"
                    android:textStyle="italic"
                    tools:text="新品\n上市" />

            </RelativeLayout>

        </RelativeLayout>
    </android.support.v7.widget.CardView>

    <TextView
        android:layout_marginLeft="@dimen/dimen_twelve"
        android:layout_marginRight="@dimen/dimen_twelve"
        android:id="@+id/tv_item_main_goods_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="left"
        android:ellipsize="end"
        tools:text="新鲜水果"
        android:maxLines="1"
        android:textStyle="bold"
        android:textColor="@color/preference_name"
        android:textSize="@dimen/font_normal" />

    <LinearLayout
        android:layout_marginTop="@dimen/dimen_two"
        android:layout_marginLeft="@dimen/dimen_twelve"
        android:layout_marginRight="@dimen/dimen_twelve"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">
            <TextView
                android:id="@+id/tv_item_main_goods_old"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textColor="@color/preference_price"
                android:textSize="@dimen/font_small"
                tools:text="25.00jin" />

            <TextView
                android:layout_marginTop="@dimen/dimen_two"
                android:id="@+id/tv_item_main_goods_now"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textColor="@color/preference_money"
                android:textSize="@dimen/font_normal"
                tools:text="25.00jin" />

        </LinearLayout>

        <ImageButton
            android:contentDescription="@null"
            android:id="@+id/btn_item_main_goods_add"
            android:layout_width="@dimen/dimen_twenty_six"
            android:layout_height="@dimen/dimen_twenty_six"
            android:layout_gravity="center"
            android:background="@drawable/icon_add" />

    </LinearLayout>


</LinearLayout>

