<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:gravity="left|bottom">
    <ImageButton
        android:layout_gravity="center"
        android:gravity="center"
        android:contentDescription="@null"
        android:id="@+id/item_count_view_minus"
        android:layout_width="@dimen/dimen_twenty_six"
        android:layout_height="@dimen/dimen_twenty_six"
        android:background="@drawable/icon_minus"
        />
    <TextView
        android:layout_marginRight="@dimen/dimen_ten"
        android:layout_marginLeft="@dimen/dimen_ten"
        android:id="@+id/item_count_view_num"
        android:layout_width="@dimen/dimen_thirty"
        android:layout_height="wrap_content"
        android:text="1"
        android:textColor="#333333"
        android:textSize="@dimen/font_huge"
        android:gravity="center"
        android:maxLines="1"
        />

    <ImageButton
        android:layout_gravity="center"
        android:gravity="center"
        android:contentDescription="@null"
        android:id="@+id/item_count_view_plus"
        android:layout_width="@dimen/dimen_twenty_six"
        android:layout_height="@dimen/dimen_twenty_six"
        android:background="@drawable/icon_add"
        />

</LinearLayout>

