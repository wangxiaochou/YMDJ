<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/dimen_forty"
        android:text="联系客服"
        android:textColor="@color/top_bar_title_color"
        android:textSize="@dimen/font_large"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/dimen_twenty"
        android:text="@string/setting_call_phone"
        android:textColor="@color/color_theme"
        android:textSize="@dimen/font_max"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dimen_twenty"
        android:layout_marginLeft="@dimen/dimen_twenty_four"
        android:layout_marginRight="@dimen/dimen_twenty_four"
        android:layout_marginTop="@dimen/dimen_forty_four"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_layout_contact_service_dialog_cancel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/shape_gray_rectangle_soild_bg"
            android:gravity="center"
            android:paddingBottom="@dimen/dimen_twelve"
            android:paddingTop="@dimen/dimen_twelve"
            android:text="取消"
            android:textColor="@color/color_white"/>

        <TextView
            android:id="@+id/tv_layout_contact_service_dialog_call"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimen_thirty_four"
            android:layout_weight="1"
            android:background="@drawable/shape_theme_color_bg"
            android:gravity="center"
            android:paddingBottom="@dimen/dimen_twelve"
            android:paddingTop="@dimen/dimen_twelve"
            android:text="拨号"
            android:textColor="@color/color_white"/>
    </LinearLayout>
</LinearLayout>