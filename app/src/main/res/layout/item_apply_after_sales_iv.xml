<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:id="@+id/rl_item_apply_after_sales"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone">

        <ImageView
            android:id="@+id/iv_item_apply_after_sales"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/shape_gray_rectangle_stoke_bg"
            android:scaleType="centerCrop"
            tools:src="@mipmap/ic_launcher"/>

        <ImageView
            android:id="@+id/iv_item_apply_after_sales_close"
            android:layout_width="23dp"
            android:layout_height="23dp"
            android:layout_alignParentRight="true"
            android:src="@drawable/icon_apply_after_sales_close"/>
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/ll_item_apply_after_sales"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/shape_gray_rectangle_stoke_bg"
        android:gravity="center"
        android:layout_marginTop="10dp"
        android:orientation="vertical"
        android:visibility="gone">

        <ImageView
            android:layout_width="28dp"
            android:layout_height="23dp"
            android:src="@drawable/icon_apply_after_sales_camera"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:text="@string/apply_after_sales_item_text"
            android:textColor="@color/color_gray_login_hint_text"
            android:textSize="@dimen/font_small"/>
    </LinearLayout>
</RelativeLayout>