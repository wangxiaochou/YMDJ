<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_white">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true">

        <TextView
            android:id="@+id/tv_web_view_error_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:clickable="true"
            android:gravity="center"
            android:padding="@dimen/padding_normal"
            android:text="@string/web_view_error_text"
            android:textColor="@color/web_view_error_text_color"
            android:textSize="@dimen/font_large"/>

        <TextView
            android:id="@+id/tv_web_view_error_reason"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_web_view_error_message"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:text="@string/web_view_error_reason"
            android:textColor="@color/web_view_error_reason_color"
            android:textSize="@dimen/font_small"/>

        <TextView
            android:id="@+id/tv_web_view_error_retry"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_web_view_error_reason"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/margin_tiny"
            android:clickable="true"
            android:gravity="center"
            android:padding="@dimen/padding_normal"
            android:text="@string/web_view_error_retry"
            android:textColor="@color/simple_title_bar_def_bg"
            android:textSize="@dimen/font_large"/>

    </RelativeLayout>


</RelativeLayout>
