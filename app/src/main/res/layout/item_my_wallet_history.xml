<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_white"
        android:padding="@dimen/padding_large">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/tv_item_my_wallet_history_amount"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_item_my_wallet_history_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="1"
                android:textColor="@color/album_FontDark"
                android:textSize="@dimen/font_normal"
                tools:text="充值" />

            <TextView
                android:id="@+id/tv_item_my_wallet_history_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_minimum"
                android:textColor="@color/album_FontHint"
                android:textSize="@dimen/font_small"
                tools:text="2017-12-12 12:12" />

        </LinearLayout>

        <TextView
            android:id="@+id/tv_item_my_wallet_history_amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/margin_normal"
            android:textColor="@color/preference_red"
            android:textSize="@dimen/font_huge"
            tools:text="+0" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_line"
        android:layout_marginLeft="@dimen/margin_small"
        android:layout_marginRight="@dimen/margin_small"
        android:background="@color/color_background" />
</LinearLayout>