<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dimen_forty_six"
    android:background="@color/color_theme"
    android:paddingLeft="@dimen/dimen_twelve"
    android:paddingRight="@dimen/dimen_twelve">
    <ImageButton
        android:contentDescription="@null"
        android:id="@+id/ib_title_activity_search_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/icon_shop_ge_back"
        android:layout_centerVertical="true"
        />
    <TextView
        android:id="@+id/tv_title_activity_search_cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:text="取消"
        android:visibility="gone"
        android:textColor="@color/color_white"
        android:textSize="@dimen/font_large"/>

    <LinearLayout
        android:layout_toRightOf="@+id/ib_title_activity_search_back"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_thirty"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/dimen_sixteen"
        android:layout_marginLeft="@dimen/dimen_sixteen"
        android:background="@drawable/shape_white_bg"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/dimen_twelve"
        android:paddingRight="@dimen/dimen_twelve">

        <ImageView
            android:contentDescription="@null"
            android:layout_width="@dimen/dimen_sixteen"
            android:layout_height="@dimen/dimen_sixteen"
            android:src="@drawable/icon_class_title_search"/>

        <com.ypshengxian.daojia.view.ExtendEditText
            android:id="@+id/eet_title_activity_search_input"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/dimen_ten"
            android:background="@null"
            android:maxLines="1"
            android:inputType="text"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:imeOptions="actionSearch"
            android:hint="输入搜索关键字"
            android:textColor="@color/top_bar_title_color"
            android:textColorHint="@color/color_gray_login_hint_text"
            android:textSize="@dimen/font_small"/>
    </LinearLayout>
</RelativeLayout>
