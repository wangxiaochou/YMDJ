<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/rl_page_status_loading_container"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/color_white">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <ImageView
            android:contentDescription="@null"
            android:id="@+id/iv_page_status_icon"
            android:layout_width="@dimen/dimen_seventy"
            android:layout_height="@dimen/dimen_seventy"
            android:src="@drawable/icon_no_msg"/>

        <TextView
            android:id="@+id/tv_page_status_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_twenty"
            android:text="@string/page_status_load_fail"
            android:textColor="@color/preference_name"
            android:textSize="@dimen/font_normal"/>

        <TextView
            android:id="@+id/tv_page_status_retry"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_thirty"
            android:background="@drawable/shape_page_status_retry_btn"
            android:paddingBottom="@dimen/dimen_six"
            android:paddingLeft="@dimen/dimen_sixteen"
            android:paddingRight="@dimen/dimen_sixteen"
            android:paddingTop="@dimen/dimen_six"
            android:text="@string/page_status_retry"
            android:textColor="@color/color_black"
            android:textSize="@dimen/font_normal"/>

    </LinearLayout>

</RelativeLayout>