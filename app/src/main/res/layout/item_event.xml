<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/color_white"
    android:orientation="vertical"
    android:paddingLeft="@dimen/dimen_twelve"
    android:paddingRight="@dimen/dimen_twelve"
    android:paddingTop="@dimen/dimen_twelve">

    <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        card_view:cardBackgroundColor="@color/color_white"
        card_view:cardCornerRadius="@dimen/dimen_eight"
        card_view:cardElevation="@dimen/dimen_two"
        card_view:cardUseCompatPadding="false">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_hundred_forty">

            <ImageView
                android:id="@+id/iv_item_event_img"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/preference_name"
                android:contentDescription="@null" />

            <TextView
                android:id="@+id/tv_item_event_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="@dimen/dimen_fourteen"
                android:textColor="@color/event_text"
                android:textSize="@dimen/font_large"
                tools:text="贾师傅好房" />

        </RelativeLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>