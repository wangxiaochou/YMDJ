<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/rl_activity_get_goods_order_info_notice"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_pink_fc757c"
        android:paddingBottom="@dimen/dimen_eight"
        android:paddingTop="@dimen/dimen_eight">

        <ImageView
            android:id="@+id/iv_activity_get_goods_order_info_notice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/margin_tiny"
            android:layout_marginRight="@dimen/margin_tiny"
            android:src="@drawable/icon_address_alert" />

        <ImageView
            android:id="@+id/iv_activity_get_goods_order_info_notice_close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/margin_tiny"
            android:layout_marginRight="@dimen/margin_tiny"
            android:src="@drawable/icon_address_close" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/iv_activity_get_goods_order_info_notice_close"
            android:layout_toRightOf="@+id/iv_activity_get_goods_order_info_notice"
            android:text="@string/get_goods_order_info_tips"
            android:textColor="@color/color_white"
            android:textSize="@dimen/font_small" />
    </RelativeLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_white"
        android:orientation="horizontal"
        android:padding="@dimen/dimen_twelve">

        <ImageView
            android:layout_width="11dp"
            android:layout_height="13dp"
            android:layout_gravity="center_vertical"
            android:src="@drawable/icon_order_details_station" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:paddingBottom="6dp"
            android:paddingRight="15dp"
            android:paddingTop="6dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/get_goods_order_info_address"
                android:textColor="@color/order_detail_gray_323334"
                android:textSize="@dimen/font_small" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_activity_get_goods_order_info_store_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/order_detail_gray_323334"
                    android:textSize="@dimen/font_normal"
                    android:textStyle="bold"
                    tools:text="@string/get_goods_order_info_store_name" />

                <TextView
                    android:id="@+id/tv_activity_get_goods_order_info_store_phone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin_large"
                    android:textColor="@color/order_detail_gray_323334"
                    android:textSize="@dimen/font_normal"
                    tools:text="@string/get_goods_order_info_store_phone" />

            </LinearLayout>

            <TextView
                android:id="@+id/tv_activity_get_goods_order_info_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:textColor="@color/order_detail_gray_323334"
                android:textSize="@dimen/font_normal"
                tools:text="@string/get_goods_order_info_address_example" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_activity_get_goods_order_info_share"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_background"
        android:orientation="vertical"
        android:visibility="gone">

        <ImageView
            android:id="@+id/iv_activity_get_goods_order_info_share"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dimen_ten"
            android:layout_marginTop="@dimen/dimen_ten"
            android:scaleType="fitXY"
            android:src="@drawable/icon_share_friend_image" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_line"
        android:layout_marginLeft="@dimen/dimen_twelve"
        android:layout_marginRight="@dimen/dimen_twelve"
        android:background="@color/color_background" />

    <RelativeLayout
        android:id="@+id/rl_activity_get_goods_order_info_code_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_white"
        android:padding="@dimen/dimen_twelve">

        <TextView
            android:id="@+id/tv_activity_get_goods_order_info_wait_pick"
            android:layout_width="51dp"
            android:layout_height="24dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:background="@drawable/shape_yellow_rectangle_stoke_bg"
            android:gravity="center"
            android:text="@string/get_goods_order_info_status_waiting"
            android:textColor="@color/color_yellow_order_details_wait_pick"
            android:textSize="@dimen/font_small" />

        <LinearLayout
            android:id="@+id/ll_activity_get_goods_order_info_order_num"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@id/tv_activity_get_goods_order_info_wait_pick"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/get_goods_order_info_order_no"
                android:textColor="@color/order_detail_gray_323334"
                android:textSize="@dimen/font_normal" />

            <TextView
                android:id="@+id/tv_activity_get_goods_order_info_order_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/order_detail_gray_323334"
                android:textSize="@dimen/font_normal"
                tools:text="00000" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_toLeftOf="@id/tv_activity_get_goods_order_info_wait_pick"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/get_goods_order_info_order_date"
                android:textColor="@color/order_detail_gray_323334"
                android:textSize="@dimen/font_normal" />

            <TextView
                android:id="@+id/tv_activity_get_goods_order_info_order_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/order_detail_gray_323334"
                android:textSize="@dimen/font_normal"
                tools:text="2018.01.01 00:00" />
        </LinearLayout>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_line"
        android:layout_marginLeft="@dimen/dimen_twelve"
        android:layout_marginRight="@dimen/dimen_twelve"
        android:background="@color/color_background" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_white"
        android:orientation="horizontal"
        android:padding="@dimen/dimen_twelve">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/get_goods_order_info_bag"
            android:textColor="@color/order_detail_gray_323334"
            android:textSize="@dimen/font_large" />

        <TextView
            android:id="@+id/tv_activity_get_goods_order_info_content_bag"
            android:layout_width="@dimen/dimen_zero"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="right"
            android:textColor="@color/order_detail_gray_323334"
            android:textSize="@dimen/font_normal"
            tools:text="@string/get_goods_order_info_big_bag" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_line"
        android:layout_marginLeft="@dimen/dimen_twelve"
        android:layout_marginRight="@dimen/dimen_twelve"
        android:background="@color/color_background" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_white"
        android:padding="@dimen/dimen_twelve">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/get_goods_order_info_coupon"
            android:textColor="@color/order_detail_gray_323334"
            android:textSize="@dimen/font_large" />

        <LinearLayout
            android:layout_width="@dimen/dimen_zero"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="right"
            android:orientation="horizontal">


            <TextView
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/get_goods_order_info_used"
                android:textColor="@color/order_detail_gray_323334"
                android:textSize="@dimen/font_normal" />

            <TextView
                android:id="@+id/tv_activity_get_goods_order_info_content_coupon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/orange_ff4400"
                android:textSize="@dimen/font_normal"
                tools:text="0" />

            <TextView
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/get_goods_order_info_yuan_coupon"
                android:textColor="@color/order_detail_gray_323334"
                android:textSize="@dimen/font_normal" />
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_line"
        android:layout_marginLeft="@dimen/dimen_twelve"
        android:layout_marginRight="@dimen/dimen_twelve"
        android:background="@color/color_background" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_white"
        android:padding="@dimen/dimen_twelve">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/get_goods_order_info_send_date"
            android:textColor="@color/order_detail_gray_323334"
            android:textSize="@dimen/font_large" />

        <TextView
            android:id="@+id/tv_activity_get_goods_order_info_content_date"
            android:layout_width="@dimen/dimen_zero"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="right"
            android:textColor="@color/order_detail_gray_323334"
            android:textSize="@dimen/font_normal"
            tools:text="2018.01.01" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_line"
        android:layout_marginLeft="@dimen/dimen_twelve"
        android:layout_marginRight="@dimen/dimen_twelve"
        android:background="@color/color_background" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_white"
        android:padding="@dimen/dimen_twelve">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/get_goods_order_info_send_time"
            android:textColor="@color/order_detail_gray_323334"
            android:textSize="@dimen/font_large" />

        <TextView
            android:id="@+id/tv_activity_get_goods_order_info_content_time"
            android:layout_width="@dimen/dimen_zero"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="right"
            android:textColor="@color/order_detail_gray_323334"
            android:textSize="@dimen/font_normal"
            tools:text="07:30-19:30" />
    </LinearLayout>
</LinearLayout>